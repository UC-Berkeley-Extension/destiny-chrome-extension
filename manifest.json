{
  "name": "Destiny Chrome Extension",
  "version": "1.0",
  "description": "Destiny Chrome Extension to change styling of Destiny Staff View",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/hope16.png",
      "32": "images/hope32.png",
      "48": "images/hope48.png",
      "128": "images/hope128.png"
    }
  },
  "icons": {
    "16": "images/hope16.png",
    "32": "images/hope32.png",
    "48": "images/hope48.png",
    "128": "images/hope128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://berkeleytestsv.destinysolutions.com/*"],
      "css":["contentScripts/main.css"],
      "js":["contentScripts/app.js"]
    }
  ],
  "manifest_version": 2
}
